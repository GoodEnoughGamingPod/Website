---
import { Astronav, MenuItems, MenuIcon, Dropdown, DropdownItems, DropdownSubmenu } from "astro-navbar";
---
<header class="lg:flex p-5  gap-5">
    <Astronav>
      <div class="flex w-full justify-between">
        <a class="logo"><img src="logo_trans.png" /></a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden lg:flex">
        <ul class="flex flex-col lg:flex-row lg:gap-5">
          <li><a href="/">Home</a></li>
          <li><a href="/about/">News & Reviews</a></li>
          <li>
            <Dropdown class="group">
              <button class="flex items-center">
                <span> Listen </span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="3"
                  stroke="currentColor"
                  class="w-3 h-3 mt-0.5 group-open:rotate-180">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
                </svg>
              </button>
              <DropdownItems class="relative">
                <div class="absolute top-0">
                  <ul>
                    <li>Spotify</li>
                    <li>Apple Music</li>
                    <li>YouTube</li>
                  </ul>
                </div>
              </DropdownItems>
            </Dropdown>
          </li>
        </ul>
      </MenuItems>
    </Astronav>
  </header>
<style>
    h3 { 
        color: white; 
        size: 2rem;
    }
    .logo {
        width: 6rem;
        height: 6rem;
    }
    li {
        color: fuchsia;
        font-size: 18px;
        font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;
       
        top: 50%;
    }

</style>